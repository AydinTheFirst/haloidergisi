# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/haloidergisi"

# JWT Configuration
JWT_SECRET="your-very-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"

# Upload and CDN Configuration
UPLOAD_DIR="./uploads"
CDN_URL="http://localhost:3001"
MAX_FILE_SIZE="10485760"  # 10MB in bytes

# Server Configuration
PORT="3001"
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="http://localhost:5173"

# Rate Limiting
RATE_LIMIT_TTL="60"  # seconds
RATE_LIMIT_LIMIT="100"  # requests per TTL

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL="debug"

# Admin Configuration
ADMIN_EMAIL="admin@haloidergisi.com"
ADMIN_PASSWORD="secure-admin-password"

# Social Media Integration (Optional)
FACEBOOK_APP_ID=""
TWITTER_API_KEY=""
INSTAGRAM_ACCESS_TOKEN=""

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=""

# Cloudinary Configuration (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""
