{
  "name": "haloidergisi_new",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenvx run -- turbo run build",
    "db:update": "turbo run db:update",
    "dev": "turbo run dev",
    "dotenvx": "dotenvx",
    "format": "oxfmt",
    "lint": "oxlint",
    "prepare": "husky",
    "start": "NODE_ENV=production dotenvx run -- turbo run start",
    "type-check": "oxlint --type-check"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.52.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "turbo": "^2.7.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "oxfmt --write",
      "oxlint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "bun@1.3.5"
}
