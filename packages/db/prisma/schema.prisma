generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   String                @id @default(uuid())
  email                String                @unique
  emailVerifiedAt      DateTime?
  password             String?
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  tokens               Token[]
  roles                Role[]                @default([USER])
  profile              Profile?
  providers            Provider[]
  notificationSettings NotificationSettings?
  crewId               String?
  crew                 Crew?                 @relation(fields: [crewId], references: [id])
  postReactions        PostReaction[]
}

model Provider {
  id         String       @id @default(uuid())
  providerId String
  provider   ProviderType
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String

  @@unique([provider, providerId])
}

model Profile {
  id        String  @id @default(uuid())
  name      String
  website   String?
  avatarUrl String?
  title     String?
  bio       String?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  createdAt DateTime @default(now())
}

model Token {
  id        String   @id @default(uuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Post {
  id      String     @id @default(uuid())
  slug    String     @unique
  status  PostStatus @default(DRAFT)
  title   String
  content String?

  coverImage String?
  attachment String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  category      Category?      @relation(fields: [categoryId], references: [id])
  categoryId    String?
  postReactions PostReaction[]
}

model Category {
  id String @id @default(uuid())

  name      String   @unique
  createdAt DateTime @default(now())

  posts Post[]
}

model PageVisit {
  id    String   @id @default(uuid())
  url   String
  date  DateTime @default(now()) @db.Date
  count Int      @default(1)

  @@unique([url, date])
}

model NotificationSettings {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  // channels
  emailNotifications Boolean @default(true)

  // types
  newPost       Boolean @default(true)
  securityAlert Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model File {
  key       String   @id
  createdAt DateTime @default(now())
}

model Crew {
  id    String @id @default(uuid())
  name  String @unique
  sort  Int    @default(0)
  users User[]

  createdAt DateTime @default(now())
}

model PostReaction {
  id        String           @id @default(uuid())
  type      PostReactionType
  post      Post             @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime         @default(now())

  @@unique([postId, userId, type])
}

model Message {
  id        String   @id @default(uuid())
  name      String
  email     String
  subject   String
  content   String
  createdAt DateTime @default(now())
}

enum PostReactionType {
  LIKE
  DISLIKE
}

enum Role {
  USER
  ADMIN
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum ProviderType {
  GOOGLE
}
